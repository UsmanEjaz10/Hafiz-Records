<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friendDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/purple_500">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:text="Name"
                android:textColor="@color/purple_700"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/Sabqi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.157"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/studentName"
                app:layout_constraintVertical_bias="0.229" />

            <TextView
                android:id="@+id/startverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="start"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/endverse"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/sabaq_para"
                app:layout_constraintTop_toBottomOf="@+id/Name" />

            <TextView
                android:id="@+id/endverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="end"
                android:textColor="@color/white"
                android:textColorHint="@android:color/holo_green_dark"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/startverse"
                app:layout_constraintTop_toTopOf="@+id/startverse" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sabaq_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="para"
                android:textColor="@color/black"
                android:textColorHint="@android:color/holo_green_dark"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/Sabqi"
                app:layout_constraintStart_toStartOf="@+id/Name"
                app:layout_constraintTop_toBottomOf="@+id/Name"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/Sabqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sabqi:"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/sabaq_para"
                app:layout_constraintTop_toBottomOf="@+id/sabaq_para"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/sabqi_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="para"
                android:textColor="@color/white"
                android:textColorHint="@android:color/holo_green_dark"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/Sabqi"
                app:layout_constraintTop_toTopOf="@+id/Sabqi" />


            <TextView
                android:id="@+id/Manzil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Manzil:"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/startverse"
                app:layout_constraintTop_toBottomOf="@+id/startverse"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/manzil_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="para"
                android:textColor="@color/white"
                android:textColorHint="@android:color/holo_green_dark"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/Manzil"
                app:layout_constraintTop_toTopOf="@+id/Manzil" />


            <TextView
                android:id="@+id/studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="student"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="24dp"
                android:id="@+id/edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.697"
                app:layout_constraintStart_toEndOf="@+id/Name"
                app:layout_constraintTop_toTopOf="@+id/Name"></androidx.appcompat.widget.AppCompatButton>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
